<div class="column-md-12 text-center well">
  <form action="/robots/<%= @robot.id %>" method="post">
    <h3>Reconstructing the Robot</h3>
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label>Name</label>
      <input class="form-control" type="text" value="<%= @robot.name %>" name="robot[name]"><br>
    </div>
    <div class="form-group">
      <label>City</label>
      <input class="form-control" type="text" value="<%= @robot.city %>" name="robot[city]"><br>
    </div>
    <div class="form-group">
      <label>State</label>
      <input class="form-control" type="text" value="<%= @robot.state %>" name="robot[state]"><br>
    </div>
    <div class="form-group">
      <label>Department</label>
      <input class="form-control" type="text" value="<%= @robot.department %>" name="robot[department]"><br>
    </div>
    <input class="btn btn-primary btn-lg" type="submit">
  </form>
</div>
