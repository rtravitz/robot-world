<div class="column-md-12 text-center well">
  <form action="/robots" method="post">
    <h2>Create a New Robot</h2>
    <div class="form-group">
      <label>Name</label>
      <input class="form-control" type="text" placeholder="Name" name="robot[name]"><br>
    </div>
    <div class="form-group">
      <label>City</label>
      <input class="form-control" type="text" placeholder="City" name="robot[city]"><br>
    </div>
    <div class="form-group">
      <label>State</label>
      <input class="form-control" type="text" placeholder="State" name="robot[state]"><br>
    </div>
    <div class="form-group">
      <label>Department</label>
      <input class="form-control" type="text" placeholder="Department" name="robot[department]"><br>
    </div>
    <input class="btn btn-primary btn-lg" type="submit">
  </form>
</div>
