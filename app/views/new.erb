<form action="/robots" method="post">
  <h2>Create a New Robot</h2>
  <label>Name</label>
  <input type="text" placeholder="Name" name="robot[name]"><br>
  <label>City</label>
  <input type="text" placeholder="City" name="robot[city]"><br>
  <label>State</label>
  <input type="text" placeholder="State" name="robot[state]"><br>
  <label>Department</label>
  <input type="text" placeholder="Department" name="robot[department]"><br>
  <input type="submit">
</form>
